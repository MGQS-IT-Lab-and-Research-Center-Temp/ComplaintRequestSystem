@model List<ComplaintRequestSystem.Models.Department.DepartmentViewModel>
@{
    ViewData["Title"] = "Department List";
    int count = 1;
}

<div>
    <a asp-controller="Department" asp-action="Create" class="btn btn-outline-primary">Add New Department</a>
</div>

@await Html.PartialAsync("_ListAlert", Model)

@if (Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">View Complaint/Request</th>
                <th scope="col">Action</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@count</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Complaint" asp-action="GetComplaintByDepartment" asp-route-id="@item.Id" class="btn btn-primary">View Complaints</a>
                        </div>
                        <div class="btn-group">
                            <a asp-controller="Request" asp-action="GetRequestsByDepartment" asp-route-id="@item.Id" class="btn btn-primary">View Requests</a>
                        </div>
                    </td>

                    <td>
                        <div class="btn-group">
                            <a asp-controller="Department" asp-action="GetDepartment" asp-route-id="@item.Id" class="btn btn-outline-secondary">View Department</a>
                        </div>

                       
                        
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}
