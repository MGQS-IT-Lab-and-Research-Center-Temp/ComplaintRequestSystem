@model List<ComplaintRequestSystem.Models.Request.RequestViewModel>

@{
    ViewData["Title"] = "Request List";
    int count = 1;
}

@await Html.PartialAsync("_ListAlert", Model)

@if (Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                @if (User.IsInRole("Admin"))
                {
                    <th scope="col">Username</th>
                }
                <th scope="col">Request</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@count</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td scope="row">@item.UserName</td>
                    }
                    <td scope="row">@item.RequestText</td>
                    <td scope="row">
                        <div class="btn-group">
                            <a asp-controller="Request" asp-action="GetRequestDetail" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">View Request</a>

                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}

